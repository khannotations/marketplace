<!doctype html>
<html>
  <head>
    <title>Yale Projects Board</title>
    <link href='<%= asset_path "favicon.ico" %>' rel='shortcut icon'>
    <!-- So meta, bro -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=2">
    <meta content='Students, find projects! Projects, find students!' name="description">
    <meta content='learning' name='keywords'>
    <!-- Facebook -->
    <meta property="og:title" content="Yale Projects Board" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://yale.projectsboard.com" />
    <meta property="og:image" content="http://gakkoproject.com/assets/logos/red_o_square.png" />
    <meta property="og:site_name" content="GAKKO PROJECT" />
    <!-- Twitter -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@gakkoproject">
    <meta name="twitter:title" content="GAKKO Project">
    <meta name="twitter:description" content="GAKKO (学校): A collaboration of people who create learning environments with a sense of belonging.">
    <meta name="twitter:creator" content="@gakkoproject">
    <meta name="twitter:image:src" content="http://gakkoproject.com/assets/logos/red_o_square.png">
    <meta name="twitter:domain" content="gakkoproject.com">
    <!-- Fonts -->
    <!-- <link href='http://fonts.googleapis.com/css?family=PT+Sans:400,700' rel='stylesheet' type='text/css'> -->
    <!-- Stylesheets -->
    <%= stylesheet_link_tag "application", :media => "all" %>
    <!-- :jp locale stylesheet -->
    <%= csrf_meta_tags %>
  </head>
  <body ng-app='Marketplace'>
    <%= yield %>
    <%= javascript_include_tag "application" %>
    
    <!-- Analytics -->
    <script type: "text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '']);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'stats.g.doubleclick.net/dc.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
  </body>
</html>
